NODES = {
  "manager1" => "192.168.99.100",
  "worker1"  => "192.168.99.101",
  "worker2"  => "192.168.99.102",
}

Vagrant.configure("2") do |config|
  NODES.each do |node_name, ip_address|
    config.vm.define node_name do |node|
      node.vm.box = "bento/ubuntu-22.04"
      node.vm.hostname = node_name
      node.vm.network "private_network", ip: ip_address

      node.vm.provider "virtualbox" do |v|
        v.name = node_name
        v.memory = 1024
        v.cpus = 1
      end

      node.vm.provision "shell", privileged: true, inline: <<-SHELL
        set -e

        # /etc/hosts pour la résolution des noms
        #{NODES.map { |n, ip| "echo '#{ip} #{n}' >> /etc/hosts" }.join("\n")}

        # Installer Docker (méthode officielle)
        if ! command -v docker &> /dev/null; then
          curl -fsSL https://get.docker.com | sh
        fi

        # Activer Docker au boot
        systemctl enable docker
        systemctl start docker

        # Autoriser vagrant à utiliser Docker sans sudo
        usermod -aG docker vagrant
      SHELL
    end
  end
end
